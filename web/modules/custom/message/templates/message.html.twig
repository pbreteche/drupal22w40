{#
/**
 * @file
 * Default theme implementation to present a message entity.
 *
 * This template is used when viewing a canonical message page,
 *
 * Available variables:
 * - content: A list of content items. Use 'content' to print all content, or
 *   print a subset such as 'content.label'.
 * - attributes: HTML attributes for the container element.
 *
 * @see template_preprocess_message()
 */
#}
<article{{ attributes }}>
  {% if view_mode != 'full' %}
    {{ title_prefix }}
    {{ title_suffix }}
  {% endif %}

  {% if not elements['#message'].sent.value and elements['#message'].uid.entity.id == user.id %}
  <form action="{{ path('message.send', {message: elements['#message'].id.value}) }}" method="post">
    <button>{{ 'Envoyer'|t }}</button>
  </form>
  {% endif %}

  {% if content %}
    {{- content -}}
  {% endif %}
</article>
